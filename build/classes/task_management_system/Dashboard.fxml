<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="533.0" prefWidth="838.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="task_management_system.DashboardController">
   <children>
      <Label alignment="CENTER" prefHeight="78.0" prefWidth="838.0" style="-fx-background-color: #d3d3d3;" text="Task Management System">
         <font>
            <Font size="33.0" />
         </font>
      </Label>
      <ListView fx:id="listview" layoutX="8.0" layoutY="128.0" onMouseClicked="#onListClicked" prefHeight="391.0" prefWidth="186.0" />
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="8.0" layoutY="95.0" prefHeight="33.0" prefWidth="186.0" style="-fx-background-color: #d3d3d3;" text="Task List">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <TextField fx:id="text1" layoutX="226.0" layoutY="107.0" prefHeight="78.0" prefWidth="358.0" promptText="Task headline here" style="-fx-background-color: #FFFAFA; -fx-border-color: #4B4B4B;" />
      <Button fx:id="btn4" layoutX="309.0" layoutY="462.0" mnemonicParsing="false" onAction="#add" prefHeight="26.0" prefWidth="54.0" text="Add" />
      <Button fx:id="btn5" layoutX="226.0" layoutY="462.0" mnemonicParsing="false" onAction="#update" text="update" />
      <Button fx:id="btn6" layoutX="394.0" layoutY="462.0" mnemonicParsing="false" onAction="#delete" text="delete" />
      <Button fx:id="btn7" layoutX="226.0" layoutY="417.0" mnemonicParsing="false" onAction="#incomplete" text="Incomplete Task" />
      <Button fx:id="btn8" layoutX="354.0" layoutY="416.0" mnemonicParsing="false" onAction="#complete" prefHeight="26.0" prefWidth="102.0" text="Complete Task" />
      <Button fx:id="btn9" layoutX="481.0" layoutY="416.0" mnemonicParsing="false" onAction="#alltask" prefHeight="26.0" prefWidth="102.0" text="All Task" />
      <TextField fx:id="textdetails" alignment="TOP_LEFT" layoutX="226.0" layoutY="216.0" prefHeight="182.0" prefWidth="358.0" promptText="Write task details here" style="-fx-background-color: #FFFAFA; -fx-border-color: #4B4B4B;" />
      <Label fx:id="name_label" alignment="CENTER" layoutX="625.0" layoutY="107.0" prefHeight="78.0" prefWidth="186.0" style="-fx-background-color: #4B4B4B;" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="16.0" />
         </font>
      </Label>
      <Button fx:id="btnlogout" layoutX="700.0" layoutY="474.0" mnemonicParsing="false" onAction="#logout" prefHeight="26.0" prefWidth="74.0" text="Logout" textFill="#ff1010">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
